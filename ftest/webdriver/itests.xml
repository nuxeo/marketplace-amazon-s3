<project name="integration-tests"
         xmlns:nx="urn:nuxeo-build"
         xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
           uri="urn:nuxeo-artifact" />
  <taskdef resource="net/sf/antcontrib/antlib.xml" />

  <property name="out.dir" value="${maven.project.build.directory}" />
  <property name="classifier" value="nuxeo-cap" />
  <property name="nuxeo.wizard.done" value="true" />

  <unzip dest="${out.dir}/" overwrite="false">
    <artifact:resolveFile key="org.nuxeo:nuxeo-ftest::zip" />
  </unzip>
  <import file="${out.dir}/nuxeo-ftest.xml" />

  <property name="mp.install"
            value="file:${out.dir}/marketplace-${marketplace.s3binaries.version}.zip" />

  <target name="prepare-bucket">
    <antcall target="set-conf">
      <param name="name" value="nuxeo.s3storage.bucket" />
      <param name="value" value="nuxeo-mp-s3-test" />
    </antcall>
    <antcall target="set-conf">
      <param name="name" value="nuxeo.s3storage.region" />
      <param name="value" value="EU" />
    </antcall>
  </target>

  <target name="cleanup-bucket">
    <echo message="Bucket contents:" />
    <exec executable="s3cmd">
      <arg line="ls s3://nuxeo-mp-s3-test" />
    </exec>
    <echo message="Emptying bucket." />
    <exec executable="s3cmd">
      <arg line="del --recursive --force s3://nuxeo-mp-s3-test" />
    </exec>
    <echo message="Destroying bucket." />
    <exec executable="s3cmd">
      <arg line="rb s3://nuxeo-mp-s3-test" />
    </exec>
  </target>

  <target name="prepare-s3-environment"
          depends="prepare-environment,prepare-bucket">
    <copy todir="${out.dir}">
      <artifact:resolveFile key="org.nuxeo.marketplace.amazon-s3-online-storage:marketplace::zip" />
    </copy>
  </target>

  <target name="cleanup-s3-environment"
          depends="cleanup-environment,cleanup-bucket" />

</project>
